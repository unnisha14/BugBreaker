<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fill_square"
    tools:context=".MedHist">

    <ScrollView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="30dp"
                android:textColor="#002751"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/age"
                    android:textSize="20sp"
                    android:padding="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:textColor="#002751"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/gender"
                    android:textColor="#002751"
                    android:textSize="20sp"
                    android:padding="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/blood_type"
                    android:textColor="#002751"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:padding="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/major_illness"
                android:layout_marginTop="30dp"
                android:textColor="#002751"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/major_surgery"
                android:layout_marginTop="30dp"
                android:textColor="#002751"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/major_injuries"
                android:layout_marginTop="30dp"
                android:textColor="#002751"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/allergy"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_marginTop="30dp"
                android:textColor="#002751"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/genetic_illness"
                android:layout_marginTop="30dp"
                android:textColor="#002751"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>