<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fill_square"
    tools:context=".MedHistEdit">

    <ScrollView
        android:padding="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="50dp">

                <TextView
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="BLOOD TYPE"
                    android:textColor="#002751"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/blood_type"
                    android:layout_marginLeft="15dp"
                    android:textColor="#002751"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <Button
                android:id="@+id/major_illness_btn"
                android:text="Any Major Illness (Tap to Add)"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:background="#002751"
                android:textColor="#8AE1D0"
                app:backgroundTint="#002751"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/major_illness"
                android:visibility="gone"
                android:textColor="#002751"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/major_surgery_btn"
                android:text="Any Major Surgery (Tap to Add)"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:background="#002751"
                android:textColor="#8AE1D0"
                app:backgroundTint="#002751"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/major_surgery"
                android:visibility="gone"
                android:textColor="#002751"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/illness_btn"
                android:text="Illness you have now (Tap to Add)"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:background="#002751"
                android:textColor="#8AE1D0"
                app:backgroundTint="#002751"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/illness"
                android:visibility="gone"
                android:textColor="#002751"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/injuries_btn"
                android:text="Any Major Injuries you have (Tap to Add)"
                android:gravity="center_vertical"
                android:background="#002751"
                android:textColor="#8AE1D0"
                app:backgroundTint="#002751"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/injuries"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textColor="#002751"
                android:layout_width="350dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/allergy_btn"
                android:text="Allergic to something?? (Tap to Add)"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="#002751"
                android:textColor="#8AE1D0"
                app:backgroundTint="#002751"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/allergy"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textColor="#002751"
                android:layout_width="350dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/gen_ill_btn"
                android:text="Genetic Illness (Tap to Add)"
                android:layout_marginTop="10dp"
                android:background="#002751"
                android:textColor="#8AE1D0"
                app:backgroundTint="#002751"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/gen_med"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textColor="#002751"
                android:layout_width="350dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/done"
                android:text="Done"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="#002751"
                android:textColor="#8AE1D0"
                app:backgroundTint="#002751"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>